<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@android:color/transparent" />
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/orca_neue_item_background_focused" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/orca_neue_item_background_pressed" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/orca_neue_item_background_focused_pressed" />
        </shape>
    </item>
</selector>