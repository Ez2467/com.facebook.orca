<?xml version="1.0" encoding="utf-8"?>
<selector android:variablePadding="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/fbui_red" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/voice_comment_sheet_mic" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/fbui_bluegrey_10" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/voice_comment_sheet_mic" />
            </item>
        </layer-list>
    </item>
</selector>