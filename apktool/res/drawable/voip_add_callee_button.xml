<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_phone_add_disabled" />
            </item>
            <item android:drawable="@drawable/voip_incall_voice_circle_disabled" />
        </layer-list>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_phone_add_blue" />
            </item>
            <item android:drawable="@drawable/voip_incall_voice_circle" />
        </layer-list>
    </item>
    <item android:state_selected="true" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/voip_incall_voice_circle_pressed" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_phone_add_white" />
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_phone_add_blue" />
            </item>
            <item android:drawable="@drawable/voip_incall_voice_circle" />
        </layer-list>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/voip_incall_voice_circle_pressed" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_phone_add_white" />
            </item>
        </layer-list>
    </item>
</selector>